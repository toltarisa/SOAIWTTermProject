@{
    ViewData["Title"] = "Home Page";
}

<div class="showcase" style="background-image: url('/img/london.jpg')">
    <div class="showcase-bg"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-12">
                <div class="content">
                    <h1>Search Any information about London</h1>
                    <input type="text" class="form-control" id="findLoc" aria-describedby="emailHelp"
                           placeholder="Enter Location or Coordinates" />
                    <a class="search-btn">
                        <img src="/img/search.svg" alt="search icon" />
                        <span>Search</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="./js/jquery/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
         $('.search-btn').click(function (e) {
                window.location.href = "LondonMaps?s=" + $('#findLoc').val();
            })
    })
</script>